package ProjetoPet;

import java.util.Scanner;

public class Telinha {

	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		int esc;
		
		System.out.println("Olá, bem vindo ao Pet'z");
		System.out.println("Escolha um Pet para ser seu:");
		
		System.out.print("1 - Cachorro" + "\n" + "2 - Gato");
		System.out.println(": ");
		esc = entrada.nextInt();
		
		if(esc == 1) {
			String nome;
			System.out.print("Escolha um nome para seu Pet: ");
			nome = entrada.toString();
			
			String raça;
			System.out.print("Escolha a raça do seu cachorro: ");
			raça = entrada.toString();
			CachorroPet pet = new CachorroPet(nome, raça);
			
			System.out.println(pet);
		}
		
		entrada.close();
	}
}
